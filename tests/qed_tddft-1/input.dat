set hilbert {
  maxiter 500
  n_photon_states          2
  cavity_frequency         [0.0, 0.0, $w]
  cavity_coupling_strength [0.0, 0.0, $g]
  maxdim                   15
  indim                    5
  qed_dft_functional b3lyp
}

set num_roots 10
set TDSCF_TDA false
