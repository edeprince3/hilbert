# PYTHONPATH must include directory above plugin directory.
#     Define either externally or here, then import plugin.
sys.path.insert(0, '../../..')
import hilbert

molecule h2 {

h 0.0 0.0 0.0
h 0.0 0.0 1.0

no_reorient
nocom
symmetry c1
}

set {
  basis cc-pvdz
  scf_type cd 
  df_ints_io save
  e_convergence 1e-12
  d_convergence 1e-12
} 


set hilbert {
  maxiter 500
  n_photon_states          2
  cavity_frequency         [0.0, 0.0, 0.0]
  cavity_coupling_strength [0.0, 0.0, 0.0]
}

activate(h2)

set reference rhf
en,wfn = energy('scf',return_wfn=True)
energy('polaritonic-rpa', ref_wfn=wfn)

set reference rhf
set ex_level = 1
set num_roots 4
energy('detci')
