sys.path.insert(0, '../../..')
import hilbert

molecule h2 {
#H 0.0 0.0 0.0
#H 0.0 0.0 1.0
         O            0.000000000000     0.000000000000    -0.068516219320
         H            0.000000000000    -0.790689573744     0.543701060715
         H            0.000000000000     0.790689573744     0.543701060715
no_reorient
nocom
symmetry c1
}

set {
  basis cc-pvdz
  scf_type cd 
  df_ints_io save
  e_convergence 1e-12
  d_convergence 1e-12
} 


set hilbert {
  maxiter 500
  n_photon_states          2
  cavity_frequency         [0.0, 0.0, 1.0]
  cavity_coupling_strength [0.0, 0.0, 0.0]
}

activate(h2)

set reference rhf
en,wfn = energy('scf',return_wfn=True)
energy('polaritonic-rpa', ref_wfn=wfn)
energy('polaritonic-tddft', ref_wfn=wfn)

